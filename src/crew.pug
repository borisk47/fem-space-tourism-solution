extend includes/layout.pug
block append customizations
    - activePage='Crew'
block content

    main.mx-auto.text-white(
        class=`
            mt-5 md:mt-1 xl:mt-8
            xl:pl-40
          `)
        h1.text-page-title
            span(aria-hidden='true') 02
            | Meet your crew


        article.flex.items-stretch.overflow-x-scroll.snap-x.snap-mandatory.scroll-smooth.scrollbar-hidden(
            class=`
                mt-6 md:mt-0 xl:mx-auto
                w-screen xl:max-w-[1300px]
                gap-8
            `)
            each member, memberIdx in crew
                section.grid.grid-crew.flex-none.w-full.snap-center(id=`crew-${memberIdx}`
                    class=`
                        px-6 xl:px-0
                    `)

                    div.grid-crew-card(
                            class=`pt-6 xl:pt-36 text-center xl:text-left justify-self-center`)
                        p.font-bellefair.text-gray-500.uppercase.tracking-wide(
                            class=`md:text-2xl xl:text-3xl`)=member.role
                        h2.font-bellefair.uppercase.tracking-wide(
                            class='mt-0.5 md:mt-3 xl:mt-9 text-2xl md:text-[40px] xl:text-[3.5rem] whitespace-nowrap')=member.name
                        p.text-description(
                            class='mt-4 md:mt-5 xl:mt-12 max-w-[29rem]')=member.bio

                    div.grid-crew-photo(
                        class=`
                            md:mt-6
                            border-b border-gray-700 md:border-b-none xl:border-b
                            h-[222px] md:h-[520px]
                            flex justify-center

                            md:self-end md:justify-self-center
                        `)
                        img(src=member.images.png
                            class=`
                                object-scale-down
                                `)

                    div.grid-crew-nav(
                        class=`
                            mt-5 md:smt-4 xl:mt-0
                            xl:pb-2
                            justify-self-center xl:justify-self-start xl:self-end
                            `)
                        ul.flex(class='space-x-2 xl:space-x-4')
                            each crewBtn, crewBtnIdx  in crew
                                li
                                    a.block.p-1.group(href=`#crew-${crewBtnIdx}` title=crewBtn.name)
                                        div.rounded-full(
                                            class=`
                                                h-3 w-3 xl:h-4 xl:w-4
                                                group-hover:bg-gray-500
                                                `
                                            class={
                                                'bg-white': crewBtnIdx == memberIdx,
                                                'bg-gray-700': crewBtnIdx != memberIdx,
                                            })



