extend includes/layout.pug
block append customizations
    - activePage='Technology'
block content
    - const circleGapClasses = `gap-4`
    - const circleSizingClasses = `w-10 md:w-[3.75rem]`
    main.text-white.flex.flex-col(
        class=`mt-5 md:mt-1 xl:mt-8`)
        h1.text-page-title
            span(aria-hidden='true') 02
            | Space Launch 101

        p(class=`
            absolute w-full top-[25.5rem] md:top-[43rem]
            font-barlow-condensed uppercase
            tracking-widest text-sm md:text-base
            text-indigo-200 text-center
            `) The terminology ...
        nav(
            class=`
                absolute w-full
                flex justify-center items-center
                 text-center top-[21.25rem] md:top-[35.125rem] z-20
                mix-blend-difference
            `)
            ul.flex(class=circleGapClasses)
                each step, index in technology
                    li
                        a(href=`#step-${index}`
                            class=circleSizingClasses
                            class=`
                                flex justify-center items-center
                                aspect-square rounded-full
                                border border-gray-500
                                font-bellefair leading-none
                                md:text-2xl
                            `)=index+1


        article(
            class=`
                mt-8 md:mt-5
                grow flex w-screen
                overflow-x-scroll snap-x snap-mandatory scroll-smooth scrollbar-hidden
            `)
            each step, stepIndex in technology
                section(id=`step-${stepIndex}` class=`
                    flex-none
                    flex flex-col w-full
                    snap-center
                `)
                    div.order-2(
                        aria-hidden=true
                        class=circleGapClasses
                        class=`
                            mt-8
                            flex justify-center items-center
                        `)
                        each navStep, index in technology
                            div(href='#'
                                class={
                                    'bg-white border-white': step == navStep,
                                    'border-transparent': step != navStep,
                                }
                                class=circleSizingClasses
                                class=`
                                    flex justify-center items-center
                                    aspect-square rounded-full
                                    border
                                `)

                    section.order-3(class='mt-[3.25rem] md:mt-24 px-6 md:px-40 text-center')
                        h2(class=`font-bellefair text2xl md:text-[2.5rem] uppercase`)=step.name
                        p.text-description(class='mt-4 md:mt-2')=step.description
                    picture(class='order-1')
                        source(srcset=step.images.portrait media='(min-width: 1024px)')
                        img.w-full(src=step.images.landscape
                            class='h-[10.5rem] md:h-[19.375rem] object-cover')
