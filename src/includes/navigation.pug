- 
    const navigation = [
        {title: 'Home', href: '/'},
        {title: 'Destination', href: 'destination.pug'},
        {title: 'Crew', href: 'crew.pug'},
        {title: 'Technology', href: 'technology.pug'},
    ];



header.p-6.pr-4.flex.relative.justify-between.items-center.overflow-x-clip
    img(src="assets/shared/logo.svg" class="w-10 h-10")
    div.hidden.w-full.h-px.ml-14.-mr-8.bg-gray-600.z-10
    label.p-2.cursor-pointer(for="menu-toggler") 
        img.w-6(src="assets/shared/icon-hamburger.svg")
    input#menu-toggler.hidden.peer(type="checkbox")
    nav.text-white.bg-opacity-5.backdrop-blur-lg.bg-white(
        class=`
                w-64 h-screen
                peer-checked:-translate-x-full
                transform-gpu
                absolute  left-full top-0
                transition-all ease-in-out duration-300
        `)
        .mt-6.mr-4.flex.justify-end
            label.inline-block.p-2.cursor-pointer(for="menu-toggler") 
                img.w-6(src="assets/shared/icon-close.svg")

        ul(
            class=`
                mt-16
                flex flex-col space-y-8
                `)
            each item, index in navigation
                - nav_index = index.toString().padStart(2, '0')
                li 
                    - const highligh_class = (item.title == activePage) ? 'border-r-4 border-white' : ''
                    a.block.w-full.space-x-2.font-barlow-condensed.tracking-widest(href=item.href, 
                        class=`
                            ${highligh_class}
                            px-8 py-1.5
                        `)
                        span.font-bold.tabular-nums #{nav_index}
                        span.uppercase #{item.title}
